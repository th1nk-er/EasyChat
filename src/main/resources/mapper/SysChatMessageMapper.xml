<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.th1nk.easychat.mapper.SysChatMessageMapper">

    <resultMap id="BaseResultMap" type="top.th1nk.easychat.domain.SysChatMessage">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="senderId" column="sender_id" jdbcType="INTEGER"/>
        <result property="senderGroupId" column="sender_group_id" jdbcType="INTEGER"/>
        <result property="receiverId" column="receiver_id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,sender_id,sender_group_id,
        receiver_id,type,content,
        create_time
    </sql>
    <select id="getChatMessageList" resultType="top.th1nk.easychat.domain.SysChatMessage">
        SELECT *
        FROM ec_chat_message
        WHERE (sender_id = #{uid1} AND receiver_id = #{uid2})
           OR (sender_id = #{uid2} AND receiver_id = #{uid1})
        ORDER BY ec_chat_message.create_time
        LIMIT #{currentPage}, #{pageSize};
    </select>
</mapper>
